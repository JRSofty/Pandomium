<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>pandomium-parent</artifactId>
        <groupId>org.panda_lang</groupId>
        <version>indev-0.1.0</version>
    </parent>

    <artifactId>pandomium</artifactId>

    <dependencies>
        <!-- Panda -->
        <dependency>
            <groupId>org.panda_lang</groupId>
            <artifactId>panda</artifactId>
        </dependency>

        <!-- JCEF -->
        <dependency>
            <groupId>org.panda_lang.pandomium</groupId>
            <artifactId>jcef</artifactId>
        </dependency>
        <dependency>
            <groupId>org.panda_lang.pandomium</groupId>
            <artifactId>jcef-tests</artifactId>
        </dependency>
        <dependency>
            <groupId>org.panda_lang.pandomium</groupId>
            <artifactId>jogl-all</artifactId>
        </dependency>
        <dependency>
            <groupId>org.panda_lang.pandomium</groupId>
            <artifactId>gluegen-rt</artifactId>
        </dependency>

        <!-- Windows x64 -->
        <dependency>
            <groupId>org.panda_lang.pandomium</groupId>
            <artifactId>gluegen-rt-natives-windows-amd64</artifactId>
        </dependency>
        <dependency>
            <groupId>org.panda_lang.pandomium</groupId>
            <artifactId>jogl-all-natives-windows-amd64</artifactId>
        </dependency>

        <!-- Linux x64 -->
        <dependency>
            <groupId>org.panda_lang.pandomium</groupId>
            <artifactId>gluegen-rt-natives-linux-amd64</artifactId>
        </dependency>
        <dependency>
            <groupId>org.panda_lang.pandomium</groupId>
            <artifactId>jogl-all-natives-linux-amd64</artifactId>
        </dependency>

        <!-- Utilities -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-compress</artifactId>
        </dependency>
        <dependency>
            <groupId>org.tukaani</groupId>
            <artifactId>xz</artifactId>
            <version>1.6</version>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>clean install</defaultGoal>
        <plugins>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <dependencies>
                    <dependency>
                        <groupId>org.codehaus.plexus</groupId>
                        <artifactId>plexus-compiler-eclipse</artifactId>
                        <version>2.5</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Implementation-Title>${project.name}</Implementation-Title>
                            <Implementation-Version>${project.version}</Implementation-Version>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>