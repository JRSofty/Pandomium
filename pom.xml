<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.panda_lang</groupId>
    <artifactId>pandomium-parent</artifactId>
    <packaging>pom</packaging>
    <version>indev-0.1.0</version>

    <modules>
        <module>pandomium</module>
        <module>pandomium-win</module>
        <module>pandomium-macos</module>
        <module>pandomium-linux</module>
    </modules>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <pandomium.repository>file:///${project.basedir}/pandomium-repo</pandomium.repository>
        <pandomium.version>${project.version}</pandomium.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- Pandomium -->
            <dependency>
                <groupId>org.panda_lang</groupId>
                <artifactId>pandomium</artifactId>
                <version>${pandomium.version}</version>
            </dependency>
            <dependency>
                <groupId>org.panda_lang</groupId>
                <artifactId>panda</artifactId>
                <version>indev-0.0.3-SNAPSHOT</version>
            </dependency>

            <!-- JCEF -->
            <dependency>
                <groupId>org.panda_lang.pandomium</groupId>
                <artifactId>jcef</artifactId>
                <version>${pandomium.version}</version>
            </dependency>
            <dependency>
                <groupId>org.panda_lang.pandomium</groupId>
                <artifactId>jcef-tests</artifactId>
                <version>${pandomium.version}</version>
            </dependency>
            <dependency>
                <groupId>org.panda_lang.pandomium</groupId>
                <artifactId>gluegen-rt</artifactId>
                <version>${pandomium.version}</version>
            </dependency>
            <dependency>
                <groupId>org.panda_lang.pandomium</groupId>
                <artifactId>jogl-all</artifactId>
                <version>${pandomium.version}</version>
            </dependency>

            <!-- Windows x64 -->
            <dependency>
                <groupId>org.panda_lang.pandomium</groupId>
                <artifactId>gluegen-rt-natives-windows-amd64</artifactId>
                <version>${pandomium.version}</version>
            </dependency>
            <dependency>
                <groupId>org.panda_lang.pandomium</groupId>
                <artifactId>jogl-all-natives-windows-amd64</artifactId>
                <version>${pandomium.version}</version>
            </dependency>

            <!-- Linux x64 -->
            <dependency>
                <groupId>org.panda_lang.pandomium</groupId>
                <artifactId>gluegen-rt-natives-linux-amd64</artifactId>
                <version>${pandomium.version}</version>
            </dependency>
            <dependency>
                <groupId>org.panda_lang.pandomium</groupId>
                <artifactId>jogl-all-natives-linux-amd64</artifactId>
                <version>${pandomium.version}</version>
            </dependency>

            <!-- Utilities -->
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-compress</artifactId>
                <version>1.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <id>panda-repo</id>
            <url>https://repo.panda-lang.org/</url>
        </repository>
    </repositories>

</project>